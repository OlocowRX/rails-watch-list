<%= render 'lists/main_banner' %>

<div class="container mt-5">
  <div class="header d-flex justify-content-between align-items-center">
    <h1><strong>My Lists</strong></h1>
    <%= link_to 'Create a movie List', new_list_path, class: "btn btn-success rounded-3" %>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :pad %>')">
        <%= list.name %>
      </div>
      <% end %>
    <% end %>
  </div>

</div>
