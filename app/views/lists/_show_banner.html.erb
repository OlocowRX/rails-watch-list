<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 900, crop: :pad %>')">
  <div class="container d-flex flex-column align-items-center">
    <h1><%= @list.name %></h1>
    <div style="position: absolute; right: 10px; top: 70px; color: white; opacity: 1; font-size: 10px;">
      <%= link_to 'Edit', edit_list_path(@list), style: 'text-decoration: none; color: #fff;' %> |
      <%= link_to "Delete",
                    list_path(@list),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this list?"},
                    style: 'text-decoration: none; color: #fff;' %>
    </div>
  </div>
</div>
