<h1><%= @list.name %></h1>

<% @bookmarks.each do |bookmark| %>
  <%= bookmark.comment %> |
  <%= bookmark.movie.title %> |
  <%= link_to '',
                bookmark_path(bookmark),
                method: :delete,
                data: { confirm: "Are you sure you want to delete?"},
                class: 'btn btn-warning fas fa-trash-alt' %>
  <br>
<% end %>
